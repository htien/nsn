<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US" dir="ltr">
<head>
    <meta charset="@ViewBag.Charset" />
    <meta name="author" content="Phuong Lien" />
    <meta name="description" content="New Social Network" />
    <meta name="generator" content="Microsoft Visual Web Developer 2010 Express" />
    <meta name="keywords" content="white, light, theme, new social network, hikari" />
    <meta name="viewport" content="width=device-width" />
    <meta name="application-name" content="newworld" />
    <base href="@Url.Content("~/")" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/static/images/favicon.ico")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/static/themes/white/sso.css")" />
    <script type="text/javascript">
        new Image().src = '@Url.Content("~/static/themes/white/images/worldmap_2_1.png")';
        new Image().src = '@Url.Content("~/static/themes/white/images/logo64_color.png")';
        new Image().src = '@Url.Content("~/static/themes/white/images/background1.png")';
        new Image().src = '@Url.Content("~/static/themes/white/images/stripe.gif")';
    </script>
    <script type="text/javascript" src="@Url.Content("~/static/js/jquery/jquery-1.7.2.js")" charset="@ViewBag.Charset"></script>
    <script type="text/javascript" src="@Url.Content("~/static/js/goog/base.js")" charset="@ViewBag.Charset"></script>
    <script type="text/javascript" src="@Url.Content("~/static/themes/white/nsn.js")" charset="@ViewBag.Charset"></script>
    <script type="text/javascript" src="@Url.Content("~/static/themes/white/sso.js")" charset="@ViewBag.Charset"></script>
</head>
<body class="UIPage UIPage_Index UIPage_HikariLogin">
    <header>
        @RenderSection("pagelet_bluebar")
    </header>
    <section>
        <div id="globalContainer" class="gl">
            @RenderBody()
        </div>
    </section>
    <footer>
        <div id="globalFooter" class="gl">
            <div class="stripe"></div>
            <div id="pageFooter">
                <div class="rfloat">
                    <div id="pagelet_nsnIndexAuthor">
                        <div class="nsnProjectAuthor">
                            <p class="nsnCopyright"><span class="press">Phạm Thị Phương Liên</span> &lt;<span class="press">insaber2309@yahoo.com</span>&gt;</p>
                        </div>
                    </div>
                </div>
                <div class="lfloat">
                    <div id="pagelet_nsnCopyleft">
                        <p class="nsnCopyright">@@<span class="press">Copyleft</span> 2012, <span class="press">NewSocl.net</span></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>