@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@section html_head_area {@RenderSection("html_head_area", false)}
<div class="nsnLeftCol_Container">
    @if (ViewBag.hasLeftCol)
    {
    <div class="nsnLeftCol">
        @RenderPage("~/Views/Shared/Frontend/pagelet/_categories_pagelet.cshtml")
    </div>
    }
</div>
<div class="nsnContentCol@(ViewBag.hasRightCol?" hasRightCol":"")">
    @if (ViewBag.hasRightCol)
    {
    <div class="nsnRightCol">
        @RenderPage("~/Views/Shared/Frontend/pagelet/_ads_pagelet.cshtml")
    </div>
    }
    <div class="nsnContentArea">
        <div id="pagelet_stream" class="nsn-box first">
            <h2 class="title-bar">Hikari Store Best Sellers</h2>
            <div class="nsn-bodyrender">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>