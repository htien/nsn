<div class="gradient">
    <div class="gradientContent">
        <div class="clearfix nsnIndexFeaturedRegistration">
            <div class="feature lfloat">
                <div class="nsnIndexMap">
                    <div class="title">NSN - connecting and sharing with a whole world.</div>
                    <div class="map"></div>
                </div>
            </div>
            <div class="signupForm rfloat">
                <div class="nsnRegistrationContainer">
                    <div class="headerText">
                        <div class="mainTitle">Sign Up</div>
                        <div class="subTitle">It's free and always will be.</div>
                    </div>
                    <div id="simple_registration_container">
                        <form id="reg" action="@Url.Action("Register")" method="post">
                            <div id="reg_form_box">
                                <table class="w100">
                                    <tbody>
                                        <tr>
                                            <td class="label"><label for="firstname">First Name:</label></td>
                                            <td>
                                                <div class="field_container"><input id="firstname" type="text" name="firstname" class="uiFormText" /></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="label"><label for="lastname">Last Name:</label></td>
                                            <td>
                                                <div class="field_container"><input id="lastname" type="text" name="lastname" class="uiFormText" /></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="label"><label for="reg_email">Your Email:</label></td>
                                            <td>
                                                <div class="field_container"><input id="reg_email" type="text" name="reg_email" class="uiFormText" /></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="label"><label for="reg_password">New Password:</label></td>
                                            <td>
                                                <div class="field_container"><input id="reg_password" type="password" name="reg_password" class="uiFormText" /></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="label"><label for="confirm_password">Re-enter:</label></td>
                                            <td>
                                                <div class="field_container"><input id="confirm_password" type="password" name="confirm_password" class="uiFormText" /></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="label"><label for="gender">I am:</label></td>
                                            <td>
                                                <select id="gender" class="uiFormSelect" name="gender">
                                                    <option value="0">Select Sex:</option>
                                                    <option value="1">Male</option>
                                                    <option value="2">Female</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="label"><label for="birthday_month">Birthday:</label></td>
                                            <td>
                                                <select id="birthday_month" class="uiFormSelect" name="birthday_month">
                                                    <option value="-1">Month:</option>
                                                    @{
                                                        string[] monthNames = { "January", "February", "March", "April", "May", "June", "July", "August", "Septemper", "October", "November", "December" };
                                                        for (int i = 0; i < monthNames.Length; i++) {
                                                            <option value="@(i+1)">@monthNames[i]</option>
                                                        }
                                                    }
                                                </select>
                                                <select id="birthday_day" class="uiFormSelect" name="birthday_day">
                                                    <option value="-1">Day:</option>
                                                    @for (int i = 1; i <= 31; i++)
                                                    {
                                                        <option value="@i">@i</option>
                                                    }
                                                </select>
                                                <select id="birthday_year" class="uiFormSelect" name="birthday_year">
                                                    <option value="-1">Year:</option>
                                                    @for (int i = DateTime.UtcNow.Year; i >= 1905; i--)
                                                    {
                                                        <option value="@i">@i</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="label"></td>
                                            <td>
                                                <div class="nsnRegistrationPPT">
                                                    <p class="text privacy_policy_text">By clicking Sign Up, you agree to our <abbr>Terms</abbr> and that you
                                                        have read and understand our <abbr>Data Use Policy</abbr>.</p>
                                                </div>
                                                <div class="nsnRegButton clearfix">
                                                    <div id="signup" class="guiButton guiRedButton">Sign Up</div>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>