@using NSN.Common;
<div id="pagelet_friends">
    <div class="UIGrid_Friends">
        <h2 class="title">Friends (@ViewBag.totalFriends)</h2>
        <div class="uiFriendsContainer">
            @if (ViewBag.listfriend != null && ViewBag.listfriend.Count > 0)
            {
                foreach (var user in ViewBag.listfriend)
                {
                    <div class="uiFriendItem">
                        <div class="uiFriend">
                            @if(user.UserImage != null)
                            {
                                <div class="friendAvatar" ><img src="@Url.Content("~/static/images/avatars/" + @user.UserImage)" alt="" /></div>
                            }
                            else if (user.Gender == 1)
                            {
                                <div class="friendAvatar"><img src="@Url.Content("~/static/images/avatars/default_male.gif")" alt="" width="100" height="100" /></div>
                            }
                            else if (user.Gender == 2)
                            {
                                <div class="friendAvatar"><img src="@Url.Content("~/static/images/avatars/default_female.gif")" alt="" width="100" height="100" /></div>
                            }
                            
                            <div class="friendInfo">
                                <div class="name"><b style="font-weight:bold"><a href="@Url.RouteUrl("Profile", new { uid = Globals.GetDisplayId(user) })">@user.FullName</a></b><br />@Globals.ShowBirthday(user.Birthday)</div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No Friend.</p>
            }
        </div>
    </div>
</div>